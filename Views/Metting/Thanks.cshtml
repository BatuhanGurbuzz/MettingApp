@model UserInfo
@{
    ViewBag.Title = "Başvuru Durumu";
}
<main class="text-center">
    <h1 class="h4">Başvuru Durumu</h1>


    @if(Model.WillAttend == true){
        <p>Teşekkürler, @Model.Name toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor</p>
        <a class="btn btn-sm btn-danger"  href="/metting/list">Katılımcıları listele</a>
    }
    else{
        <p>@Model.Name, Katılmadığından dolayı üzgünüz.</p>
        <a class="btn btn-sm btn-danger"  href="/metting/apply">Katılımcı Formu</a>
    }

    
</main>